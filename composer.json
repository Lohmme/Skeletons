{
  "name": "lohmme/library-skeleton",
  "description": "A skeleton for libraries written in PHP.",
  "version": "1.0.0",
  "type": "library",
  "homepage": "https://github.com/Lohmme/Skeletons/tree/php/library",
  "readme": "README.md",
  "license": "MIT",
  "authors": [
    {
      "name": "LÃ©o DEVILLE",
      "email": "leo@deville.onl",
      "homepage": "https://www.deville.onl/",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "contact@deville.onl",
    "issues": "https://github.com/Lohmme/Skeletons/issues",
    "forum": "https://github.com/Lohmme/Skeletons/discussions",
    "wiki": "https://github.com/Lohmme/Skeletons/wiki",
    "source": "https://github.com/Lohmme/Skeletons/tree/php/library",
    "docs": "https://github.com/Lohmme/Skeletons/tree/php/library/README.md"
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpstan/extension-installer": "1.1.*",
    "phpstan/phpstan": "0.12.*",
    "phpstan/phpstan-deprecation-rules": "0.12.*",
    "phpstan/phpstan-phpunit": "0.12.*",
    "phpstan/phpstan-strict-rules": "0.12.*",
    "phpunit/phpunit": "9.5.*",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "3.5.*"
  },
  "autoload": {
    "psr-4": {
      "Library\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Library\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "scripts": {
    "install-dev": "composer install",
    "install-prod": "composer install --prefer-dist --no-dev --optimize-autoloader",
    "test": [
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "phpcs": "phpcs",
    "phpstan": "phpstan analyse --memory-limit 2G",
    "phpunit": "phpunit"
  }
}
